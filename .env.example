# Application Settings
PROJECT_NAME="FastAPI Boilerplate"
ENVIRONMENT="development"
SECRET_KEY="your-super-secret-key-min-32-characters-long-change-this"
DEBUG_RETURN_VERIFICATION_CODE=true

# Database
DATABASE_URL="postgresql+asyncpg://postgres:postgres@localhost:5432/fastapi_boilerplate"

# Redis
REDIS_URL="redis://localhost:6379/0"

# Security & JWT
ALGORITHM="HS256"
ACCESS_TOKEN_EXPIRE_MINUTES=60
REFRESH_TOKEN_EXPIRE_DAYS=30

# Google OAuth
GOOGLE_CLIENT_ID="your-google-client-id.apps.googleusercontent.com"

# Apple Sign-In
APPLE_BUNDLE_ID="com.yourapp.bundle"
APPLE_SERVICE_ID="com.yourapp.service"

# Google Cloud Storage
PUBLIC_BUCKET_NAME="your-public-bucket"
PRIVATE_BUCKET_NAME="your-private-bucket"
GOOGLE_APPLICATION_CREDENTIALS_BASE64=""

# Google Gemini AI
GOOGLE_API_KEY="your-gemini-api-key"
GEMINI_CHAT_MODEL="gemini-2.0-flash-exp"
GEMINI_MODEL_LOW="gemini-2.0-flash-exp"

# Chat Settings
CHAT_SUMMARY_TRIGGER_COUNT=50
CHAT_MAX_FILE_SIZE_MB=10

# Email Service
USE_MOCK_EMAIL=true
ZEPTOMAIL_API_KEY="your-zeptomail-api-key"
ZEPTOMAIL_FROM_EMAIL="noreply@yourdomain.com"
ZEPTOMAIL_FROM_NAME="FastAPI Boilerplate"

# CORS Settings (JSON array)
BACKEND_CORS_ORIGINS=["http://localhost:3000","http://localhost:8000"]

# Swagger/OpenAPI (Production)
SWAGGER_USER="admin"
SWAGGER_PASSWORD="change-this-secure-password"

# Celery (Optional - for background tasks)
CELERY_BROKER_URL="redis://localhost:6379/1"
CELERY_RESULT_BACKEND="redis://localhost:6379/1"



